{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "env": {
    // "browser": true,
    // "node": true,
    "jest": true
  },
  "globals": {
    "document": true
    // "foo": true,
    // "window": true
  },
  "rules": {
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js"]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  }
}